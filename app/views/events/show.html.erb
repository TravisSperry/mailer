<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <p>
        <b>Title:</b>
        <%= @event.title %>
      </p>

      <p>
        <b>Organiztion:</b>
        <%= @event.organization %>
      </p>
      <p>
        <b>Description:</b>
        <%= @event.description %>
      </p>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <h4>Newsletter Preview:</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7 col-lg-offset-3 col-md-5 col-sm-12 col-xs-12">
      <div style="padding: 5px 9px 0 9px" class="well well-sm">
      <%= render 'event_newsletter_view', event: @event %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <%= link_to "View Newsletter", @event.newsletter, class: "btn btn-primary" if @event.newsletter %>
      <%= link_to "Add Another Event", new_event_path(@event.newsletter.id), class: "btn btn-success" if @event.newsletter %>
      <%= link_to "Add Event", new_event_path, class: "btn btn-success" unless @event.newsletter %>
    </div>
  </div>
</div>
