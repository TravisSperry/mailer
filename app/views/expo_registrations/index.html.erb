<div class="container">
  <% title "Expo Registrations" %>

  <p>
    Download:
    <%= link_to "CSV", expo_registrations_path(format: "csv") %>
  </p>

  <table class="datatable" class="display" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Year</th>
        <th>Newsletter</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @expo_registrations.each do |expo_registration| %>
        <tr>
          <td><%= expo_registration.id %></td>
          <td><%= expo_registration.name %></td>
          <td><%= expo_registration.email %></td>
          <td><%= expo_registration.year %></td>
          <td><%= expo_registration.newsletter %></td>
          <td><%= link_to 'Show', expo_registration %></td>
          <td><%= link_to 'Edit', edit_expo_registration_path(expo_registration) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>