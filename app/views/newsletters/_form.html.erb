<%= simple_form_for(@newsletter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :month, as: :select, collection: Date::MONTHNAMES.zip((0..12).to_a) %>
    <%= f.input :year, as: :select, collection: ((Date.today.year)..(Date.today.year + 10)).to_a %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
