<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "EnrichColumbus" %></title>
    <%= stylesheet_link_tag "application" %>

    <%= render 'layouts/favicon_tags' %>

    <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
    <%= csrf_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= yield(:head) %>
  </head>
  <body>
    <%= render 'layouts/flash_message' %>
    <div class="body-container">
      <%= render 'layouts/side_menu' %>
      <%= content_tag(:div, content_tag(:h1, yield(:title)), class: "container") if show_title? %>

      <%= yield %>

      <%= render 'layouts/footer' %>
    </div>
    <%= render 'layouts/ga' if Rails.env.production? %>
  </body>
</html>
