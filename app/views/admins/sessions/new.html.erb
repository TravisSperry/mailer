<div style="margin-top:120px;"  class="container">
  <h2>Sign in</h2>
  <div class="row">
    <div class="col-lg-4 col-sm-12 col-xs-12">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true %>
          <%= f.input :password, :required => false %>
          <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        </div>
      </br>
        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
    <div style="text-align:center;" class="col-lg-8 hidden-sm hidden-xs">
      <i class="fa fa-arrow-left" style="font-size:10em;"> </i><i class="fa fa-globe" style="font-size:10em;padding-left:20px;"> </i>
  </div>
</div>