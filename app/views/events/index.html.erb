<div class="container">
    <% title "Events" %>

    <table>
      <thead>
          <tr>
            <th>Title</th>
            <th>Organization</th>
            <th>Contact</th>
            <th>Phone</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Description</th>
            <th>Cost</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.organization %></td>
            <td><%= event.contact %></td>
            <td><%= event.phone %></td>
            <td><%= event.address %></td>
            <td><%= event.city %></td>
            <td><%= event.state %></td>
            <td><%= event.zip %></td>
            <td><%= event.description %></td>
            <td><%= event.cost %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br />

    <%= link_to 'New Event', new_event_path, class: "btn btn-lg btn-success" %>
</div>