<%= simple_form_for(@expo_registration) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :year %>
    <%= f.input :newsletter %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
