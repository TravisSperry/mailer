<h1>Listing parents</h1>

<table>
  <tr>
    <th>Registration</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Role</th>
    <th>Email</th>
    <th>Volunteer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parents.each do |parent| %>
  <tr>
    <td><%= parent.registration_id %></td>
    <td><%= parent.first_name %></td>
    <td><%= parent.last_name %></td>
    <td><%= parent.role %></td>
    <td><%= parent.email %></td>
    <td><%= parent.volunteer %></td>
    <td><%= link_to 'Show', parent %></td>
    <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
    <td><%= link_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

