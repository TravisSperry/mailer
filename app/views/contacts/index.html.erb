<div class="container">
  <% title "Contacts" %>

  <table class="datatable">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.email %></td>
          <td><%= link_to "Show", contact %></td>
          <td><%= link_to "Edit", edit_contact_path(contact) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><%= link_to "New Contact", new_contact_path, class: "btn btn-lg btn-success" %></p>
</div>